<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="88dp">

    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
        android:id="@+id/commodity_cover_iv"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:background="#00000000"
        android:src="@drawable/plvec_like_1"
        app:radius_iv="8dp"
        tools:src="@drawable/plvec_like_1" />

    <TextView
        android:id="@+id/commodity_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/commodity_cover_iv"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/commodity_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignLeft="@+id/commodity_name_tv"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:text="¥50"
        android:textStyle="bold"
        android:textColor="#FF473A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/commodity_shelf_tv"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/plvec_commodity_tv_bg_sel"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="已下架"
        android:textColor="#ffffff"
        android:textSize="12sp" />
</RelativeLayout>